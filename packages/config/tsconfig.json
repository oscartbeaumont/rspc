{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    // "noUnusedLocals": true,  // TODO: enable this
    // "noUnusedParameters": true, // TODO: enable this
    // "forceConsistentCasingInFileNames": true, // TODO: enable this
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "baseUrl": "../",
    "paths": {
      "@rspc/client": ["./client/src"],
      "@rspc/client/full": ["./client/src/full"],
      "@rspc/react": ["./react/src"],
      "@rspc/solid": ["./solid/src"],
      "@rspc/tauri": ["./tauri/src"]
    }
  },
  "include": ["./getRollupConfig.ts"]
}
