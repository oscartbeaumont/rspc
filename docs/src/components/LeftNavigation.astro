---
import clsx from "clsx";
import { getSidebarData } from "../utils";
import ThemeToggleButton from "./ThemeToggleButton.astro";
import { config } from "../config";

export interface Props {
  currentPage: string;
  class?: string;
}

const sidebar = await getSidebarData();
const { currentPage, class: className } = Astro.props;
---

<nav class={clsx("text-base lg:text-sm", className)}>
  <div class="items-center justify-center flex sm:hidden">
    {
      config.header?.links?.map((link) => (
        <a
          href={link.href}
          rel="noreferrer noopener"
          target="_black"
          class="mx-2"
          aria-label={link.alt}
        >
          <img
            class="h-9 w-9 object-contain"
            src={link.src}
            alt={link.alt}
            draggable={false}
          />
        </a>
      ))
    }

    <div class="text-center mx-4 md:mx-4 select-none">
      <ThemeToggleButton />
    </div>
  </div>
  <ul role="list" class="space-y-9">
    {
      [...sidebar.values()].map((category) => (
        <li>
          <h2 class="font-display font-medium text-slate-900 dark:text-white">
            {category.name}
          </h2>
          <ul
            role="list"
            class="mt-2 space-y-2 border-l-2 border-slate-100 dark:border-slate-800 lg:mt-4 lg:space-y-4 lg:border-slate-200"
          >
            {category.children.map((page) => (
              <li class="relative">
                <a
                  href={`/${page.url}`}
                  rel="prefetch"
                  class={clsx(
                    "block w-full pl-3.5 before:pointer-events-none before:absolute before:-left-1 before:top-1/2 before:h-1.5 before:w-1.5 before:-translate-y-1/2 before:rounded-full close-sidebar-on-click",
                    currentPage === `/${page.url}/` ||
                      currentPage === `/${page.url}`
                      ? "font-semibold text-sky-500 before:bg-sky-500"
                      : "text-slate-500 before:hidden before:bg-slate-300 hover:text-slate-600 hover:before:block dark:text-slate-400 dark:before:bg-slate-700 dark:hover:text-slate-300"
                  )}
                >
                  {page.title}
                </a>
              </li>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</nav>

<script>
  document.querySelectorAll(".close-sidebar-on-click").forEach((e) => {
    e.addEventListener("click", () =>
      document.body.classList.remove("mobile-sidebar-toggle")
    );
  });
</script>
